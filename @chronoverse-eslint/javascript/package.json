{
  "name": "@chronoverse-eslint/javascript",
  "version": "3.1.0",
  "private": false,
  "description": "Modern ESLint configuration for JavaScript projects focused on best practices and performance optimization",
  "keywords": [
    "eslint",
    "eslintconfig",
    "javascript",
    "lint",
    "linter",
    "style",
    "chronoverse",
    "performance",
    "best-practices"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gratisvictory/chronoverse-eslint"
  },
  "license": "MIT",
  "author": {
    "name": "@gratisvictory",
    "email": "gratisvictory.dev@proton.me",
    "url": "https://github.com/gratisvictory"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/@types/index.d.ts"
    },
    "./config": {
      "import": "./dist/config.js",
      "types": "./dist/@types/config.d.ts"
    },
    "./best-practice": {
      "import": "./dist/rules/best-practice.js",
      "types": "./dist/@types/rules/best-practice.d.ts"
    },
    "./errors": {
      "import": "./dist/rules/errors.js",
      "types": "./dist/@types/rules/errors.d.ts"
    },
    "./es6": {
      "import": "./dist/rules/es6.js",
      "types": "./dist/@types/rules/es6.d.ts"
    },
    "./node": {
      "import": "./dist/rules/node.js",
      "types": "./dist/@types/rules/node.d.ts"
    },
    "./strict": {
      "import": "./dist/rules/strict.js",
      "types": "./dist/@types/rules/strict.d.ts"
    },
    "./stylistic": {
      "import": "./dist/rules/stylistic.js",
      "types": "./dist/@types/rules/stylistic.d.ts"
    },
    "./variables": {
      "import": "./dist/rules/variables.js",
      "types": "./dist/@types/rules/variables.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/@types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run clean:all && bun build.js",
    "build:clean": "rimraf dist",
    "build:cli": "bun run clean:all && bun run builder -e src/index.js",
    "clean": "rimraf node_modules",
    "clean:all": "rimraf dist node_modules",
    "lint:build:inspector": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest build --config ./eslint.config.javascript.js --outDir .eslint-javascript && bunx serve .eslint-javascript",
    "lint:dev:inspector": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest --config ./eslint.config.javascript.js",
    "lint:inspector:clean": "rimraf .eslint-javascript"
  },
  "dependencies": {
    "@chronoverse-shared/utilities": "^3.1.1",
    "eslint": "^9.27.0",
    "eslint-config-eslint": "^11.0.0"
  },
  "devDependencies": {
    "@chronoverse-shared/builder": "workspace:^",
    "@eslint/js": "^9.27.0",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "eslint": "^9.27.0"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "bun": ">=1.2.13",
    "node": ">=23.11.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
