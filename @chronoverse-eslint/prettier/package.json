{
  "name": "@chronoverse-eslint/prettier",
  "version": "3.0.0",
  "private": false,
  "description": "Seamless ESLint configuration for Prettier integration with automatic code formatting and consistent style",
  "keywords": [
    "eslint",
    "eslintconfig",
    "prettier",
    "formatting",
    "style",
    "typescript",
    "javascript",
    "lint",
    "linter",
    "chronoverse",
    "code-quality",
    "best-practices"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gratisvictory/chronoverse-eslint"
  },
  "license": "MIT",
  "author": {
    "name": "@gratisvictory",
    "email": "gratisvictory.dev@proton.me",
    "url": "https://github.com/gratisvictory"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/@types/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/@types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run clean:all && bun build.js",
    "build:clean": "rimraf dist",
    "build:cli": "bun run clean:all && bun run builder -e src/index.js -o dist",
    "clean": "rimraf node_modules",
    "clean:all": "rimraf dist node_modules"
  },
  "dependencies": {
    "@chronoverse-shared/utilities": "^3.0.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0"
  },
  "devDependencies": {
    "@chronoverse-shared/builder": "workspace:^",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "eslint": "^9.26.0"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "bun": ">=1.2.13"
  }
}
