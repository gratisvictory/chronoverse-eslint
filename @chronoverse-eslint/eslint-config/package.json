{
  "name": "@chronoverse-eslint/eslint-config",
  "version": "2.3.3",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/@types/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/@types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run clean:all && bun build.js",
    "build:clean": "rimraf dist",
    "build:cli": "bun run clean:all && bun run builder -e src/index.js",
    "clean": "rimraf node_modules",
    "clean:all": "rimraf dist node_modules",
    "lint:build:inspector": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest build --config ./eslint.config.viewer.js --outDir .eslint && bunx serve .eslint",
    "lint:dev:inspector": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest --config ./eslint.config.viewer.js",
    "lint:inspector:clean": "rimraf .eslint",
    "lint:inspector:deploy": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest build --config ./eslint.config.viewer.js --base /chronoverse-eslint/ --outDir .eslint"
  },
  "dependencies": {
    "@chronoverse-eslint/functional": "workspace:^",
    "@chronoverse-eslint/javascript": "workspace:^",
    "@chronoverse-eslint/prettier": "workspace:^",
    "@chronoverse-eslint/react": "workspace:^",
    "@chronoverse-eslint/stylistic": "workspace:^",
    "@chronoverse-eslint/typescript": "workspace:^",
    "@chronoverse-shared/utilities": "workspace:^",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/css": "^0.7.0",
    "@eslint/json": "^0.12.0",
    "@next/eslint-plugin-next": "^15.3.2",
    "eslint": "^9.26.0",
    "eslint-config-eslint": "^11.0.0",
    "eslint-plugin-better-mutation": "^2.0.2",
    "eslint-plugin-depend": "^1.2.0",
    "eslint-plugin-jsdoc": "^50.6.17",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-perfectionist": "^4.13.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn-x": "^1.0.7"
  },
  "devDependencies": {
    "@chronoverse-shared/builder": "workspace:^",
    "@types/eslint-plugin-security": "^3.0.0",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "eslint": "^9.26.0"
  },
  "packageManager": "bun@1.2.13",
  "engines": {
    "bun": ">=1.2.13"
  },
  "publishConfig": {
    "access": "public"
  }
}
