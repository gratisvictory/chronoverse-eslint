{
  "name": "chronoverse-eslint",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "@chronoverse/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:clean": "lerna run build:clean",
    "build:inspector:deploy": "lerna run lint:inspector:deploy --scope @chronoverse-eslint/eslint-config",
    "ci:release": "changeset publish",
    "ci:version": "changeset version",
    "clean": "lerna run clean",
    "clean:all": "lerna run clean:all",
    "commit": "git-cz",
    "format:check": "prettier --check . --cache --cache-location=node_modules/.cache/.prettiercache",
    "format:fix": "prettier --write . --cache --cache-location=node_modules/.cache/.prettiercache --log-level=warn",
    "lint:check": "eslint --cache --cache-location=node_modules/.cache/.eslintcache",
    "lint:debug": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --debug",
    "lint:fix": "eslint --fix --cache --cache-location=node_modules/.cache/.eslintcache",
    "lint:ws": "bunx sherif@latest",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@chronoverse-eslint/eslint-config": "workspace:^",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/config-lerna-scopes": "^19.7.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@types/bun": "^1.2.10",
    "commitizen": "^4.3.1",
    "eslint": "^9.25.1",
    "husky": "^9.1.7",
    "inquirer": "^12.6.0",
    "lerna": "^8.2.2",
    "nx": "^20.8.0",
    "prettier": "^3.5.3",
    "prettier-plugin-multiline-arrays": "^4.0.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-sort-json": "^4.1.1"
  },
  "packageManager": "bun@1.2.10",
  "engines": {
    "bun": ">=1.2.10"
  }
}
