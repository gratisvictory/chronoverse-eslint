{
  "name": "chronoverse-eslint",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "@chronoverse-eslint/*",
    "@chronoverse-shared/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "ci:release": "changeset publish",
    "ci:version": "changeset version",
    "clean": "lerna run clean",
    "clean:all": "lerna run clean:all",
    "commit": "git-cz",
    "format:check": "prettier --check --config ./prettier.config.js \"**/*.{js,json}\"",
    "format:check:cache": "prettier --check --config ./prettier.config.js \"**/*.{js,json}\" --cache --cache-location=node_modules/.cache/.prettiercache",
    "format:fix": "prettier --write --config ./prettier.config.js \"**/*.{js,json}\" --log-level=warn",
    "format:fix:cache": "prettier --write --config ./prettier.config.js \"**/*.{js,json}\" --cache --cache-location=node_modules/.cache/.prettiercache --log-level=warn",
    "lerna:build:builder": "lerna run build --scope=@chronoverse-shared/builder",
    "lerna:build:clean": "lerna run build:clean",
    "lerna:build:functional": "lerna run build --scope=@chronoverse-eslint/functional",
    "lerna:build:javascript": "lerna run build --scope=@chronoverse-eslint/javascript",
    "lerna:build:presets": "lerna run build --scope=@chronoverse-eslint/presets",
    "lerna:build:react": "lerna run build --scope=@chronoverse-eslint/react",
    "lerna:build:stylistic": "lerna run build --scope=@chronoverse-eslint/stylistic",
    "lerna:build:typescript": "lerna run build --scope=@chronoverse-eslint/typescript",
    "lerna:build:utilities": "lerna run build --scope=@chronoverse-shared/utilities",
    "lerna:clean": "lerna run clean",
    "lerna:clean:all": "lerna run clean:all",
    "lerna:format:check": "lerna run format:check",
    "lerna:format:check:cache": "lerna run format:check:cache",
    "lerna:format:fix": "lerna run format:fix",
    "lerna:format:fix:cache": "lerna run format:fix:cache",
    "lerna:lint:check": "lerna run lint:check",
    "lerna:lint:check:cache": "lerna run lint:check:cache",
    "lerna:lint:fix": "lerna run lint:fix",
    "lerna:lint:fix:cache": "lerna run lint:fix:cache",
    "lint:check": "eslint -c ./eslint.config.js",
    "lint:check:cache": "eslint -c ./eslint.config.js --cache --cache-location=node_modules/.cache/.eslintcache",
    "lint:fix": "eslint -c ./eslint.config.js --fix",
    "lint:fix:cache": "eslint -c ./eslint.config.js --cache --cache-location=node_modules/.cache/.eslintcache",
    "lint:inspector:deploy": "rimraf .eslint && bunx @eslint/config-inspector@latest build --config ./eslint.config.viewer.js --base /chronoverse-eslint/ --outDir .eslint",
    "lint:ws": "bunx sherif@latest",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@chronoverse-eslint/functional": "workspace:^",
    "@chronoverse-eslint/javascript": "workspace:^",
    "@chronoverse-eslint/presets": "workspace:^",
    "@chronoverse-eslint/react": "workspace:^",
    "@chronoverse-eslint/stylistic": "workspace:^",
    "@chronoverse-eslint/typescript": "workspace:^",
    "@chronoverse-shared/utilities": "workspace:^",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-lerna-scopes": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@types/bun": "^1.2.15",
    "commitizen": "^4.3.1",
    "eslint": "^9.28.0",
    "husky": "^9.1.7",
    "inquirer": "^12.6.3",
    "lerna": "^8.2.2",
    "nx": "^20.8.1",
    "prettier": "^3.5.3",
    "prettier-plugin-multiline-arrays": "^4.0.3",
    "prettier-plugin-packagejson": "^2.5.15",
    "prettier-plugin-sort-json": "^4.1.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.14",
  "engines": {
    "bun": ">=1.2.14",
    "node": ">=23.11.0"
  }
}
