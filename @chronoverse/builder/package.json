{
  "name": "@chronoverse-eslint/builder",
  "private": true,
  "description": "Reusable build script for Bun",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/@types/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/@types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build.js",
    "build:clean": "rimraf dist",
    "clean": "rimraf node_modules",
    "clean:all": "rimraf dist node_modules"
  },
  "dependencies": {
    "esbuild": "^0.25.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "esbuild": "^0.25.3"
  },
  "packageManager": "bun@1.2.11",
  "engines": {
    "bun": ">=1.2.11"
  }
}
