{
  "name": "@chronoverse-eslint/eslint-config",
  "version": "1.0.10",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build.js",
    "build:clean": "rimraf dist",
    "clean": "rimraf node_modules",
    "clean:all": "rimraf dist .eslint node_modules",
    "lint:build:inspector": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest build --config ./eslint.config.viewer.js --outDir .eslint && bunx serve .eslint",
    "lint:dev:inspector": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest --config ./eslint.config.viewer.js",
    "lint:inspector:clean": "rimraf .eslint",
    "lint:inspector:deploy": "bun run lint:inspector:clean && bunx @eslint/config-inspector@latest build --config ./eslint.config.viewer.js --base /chronoverse-eslint/ --outDir .eslint"
  },
  "dependencies": {
    "@chronoverse-eslint/javascript": "workspace:^",
    "@chronoverse-eslint/perfectionist": "workspace:^",
    "@chronoverse-eslint/react": "workspace:^",
    "@chronoverse-eslint/shared": "workspace:^",
    "@chronoverse-eslint/typescript": "workspace:^",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/css": "^0.7.0",
    "@eslint/json": "^0.12.0",
    "eslint": "^9.25.1",
    "eslint-config-eslint": "^11.0.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-better-mutation": "^2.0.2",
    "eslint-plugin-depend": "^1.0.0",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-unicorn-x": "^1.0.5"
  },
  "devDependencies": {
    "globals": "^16.0.0",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "eslint": "^9.25.1"
  },
  "packageManager": "bun@1.2.10",
  "engines": {
    "bun": ">=1.2.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
